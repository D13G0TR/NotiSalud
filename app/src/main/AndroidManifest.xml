<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notisalud">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotiSalud">

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="NotiSalud"
            android:theme="@style/Theme.NotiSalud">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades de Paciente -->
        <activity
            android:name=".Paciente.PacienteActivity"
            android:exported="false" />
        <activity
            android:name=".Paciente.PacienteVista"
            android:exported="false" />

        <!-- Actividades de Enfermero -->
        <activity
            android:name=".Enfermero.EnfermeroActivity"
            android:exported="false" />
        <activity
            android:name=".Enfermero.EnfermeroVista"
            android:exported="false" />

        <!-- Actividades de Médico -->
        <activity
            android:name=".Medico.DoctorVista"
            android:exported="false" />
        <activity
            android:name=".Medico.MedicoPacienteVista"
            android:exported="false" />
        <activity
            android:name=".Medico.MedicoAtender"
            android:exported="true" />
        <activity
            android:name=".Medico.PacienteUrgencia"
            android:exported="false" />

        <!-- Actividades de Paramédico -->
        <activity
            android:name=".Paramedico.ParamedicoVista"
            android:exported="false" />
        <activity
            android:name=".Paramedico.ParamedicoAccion"
            android:exported="false" />

        <!-- Actividades de Exámenes -->
        <activity
            android:name=".Examen.LaboratorioVista"
            android:exported="false" />
        <activity
            android:name=".Examen.RadiologiaVista"
            android:exported="false" />

        <!-- Servicio de Firebase Messaging -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>
</manifest>
